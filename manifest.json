{
  "manifest_version": 2,
  "name": "Easy List",
  "version": "1.0",
  "description": "Create a list of Wikipedia items with a click",
  "content_scripts": [
    {
      "matches": ["https://en.wikipedia.org/wiki/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Easy List"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs"]
}
